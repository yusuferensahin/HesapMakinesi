<UserControl x:Class="HesapMakinesi.Views.ProgrammerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:HesapMakinesi.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ProgrammerViewModel}"
             d:DesignHeight="700" d:DesignWidth="450">

    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{DynamicResource PanelBackgroundBrush}" 
                CornerRadius="8" Padding="5" BorderBrush="#444" BorderThickness="1">
            <StackPanel>
                <Button Command="{Binding SwitchBaseCommand}" CommandParameter="HEX"
                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" Height="30">
                    <Grid>
                        <TextBlock Text="HEX" Foreground="{Binding HexColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding HexValue}" Foreground="{Binding HexColor}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Command="{Binding SwitchBaseCommand}" CommandParameter="DEC"
                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" Height="30">
                    <Grid>
                        <TextBlock Text="DEC" Foreground="{Binding DecColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DecValue}" Foreground="{Binding DecColor}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Command="{Binding SwitchBaseCommand}" CommandParameter="OCT"
                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" Height="30">
                    <Grid>
                        <TextBlock Text="OCT" Foreground="{Binding OctColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding OctValue}" Foreground="{Binding OctColor}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button Command="{Binding SwitchBaseCommand}" CommandParameter="BIN"
                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" Height="Auto" MinHeight="30">
                    <Grid>
                        <TextBlock Text="BIN" Foreground="{Binding BinColor}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding BinValue}" Foreground="{Binding BinColor}" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                   TextWrapping="Wrap" MaxWidth="350" TextAlignment="Right"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="DEL" FontWeight="Bold" Style="{DynamicResource ModernButtonStyle}" Command="{Binding DeleteCommand}"/>
            <Button Grid.Row="0" Grid.Column="4" Content="AC" FontWeight="Bold" Style="{DynamicResource ModernButtonStyle}" Command="{Binding ClearAllCommand}" Foreground="#D9534F"/>

            <Button Grid.Row="1" Grid.Column="0" Content="7" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="7"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="8"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="9"/>
            <Button Grid.Row="1" Grid.Column="3" Content="ANS" FontWeight="Bold" Style="{DynamicResource ModernButtonStyle}"/>

            <Button Grid.Row="1" Grid.Column="4" Content="=" FontWeight="Bold" Style="{DynamicResource ModernButtonStyle}" Background="{DynamicResource AccentBrush}"
                    Command="{Binding CalculateCommand}"/>

            <Button Grid.Row="2" Grid.Column="0" Content="4" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="4"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="5"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="6"/>

            <Button Grid.Row="2" Grid.Column="3" Content="X" FontSize="18" Style="{DynamicResource ModernButtonStyle}"
                    Command="{Binding OperatorPressCommand}" CommandParameter="X"/>
            <Button Grid.Row="2" Grid.Column="4" Content="÷" FontSize="18" Style="{DynamicResource ModernButtonStyle}"
                    Command="{Binding OperatorPressCommand}" CommandParameter="÷"/>

            <Button Grid.Row="3" Grid.Column="0" Content="1" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="1"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="2"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="3"/>

            <Button Grid.Row="3" Grid.Column="3" Content="+" FontSize="18" Style="{DynamicResource ModernButtonStyle}"
                    Command="{Binding OperatorPressCommand}" CommandParameter="+"/>
            <Button Grid.Row="3" Grid.Column="4" Content="-" FontSize="18" Style="{DynamicResource ModernButtonStyle}"
                    Command="{Binding OperatorPressCommand}" CommandParameter="-"/>

            <Button Grid.Row="4" Grid.Column="0" Content="A" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="A"/>
            <Button Grid.Row="4" Grid.Column="1" Content="D" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="D"/>
            <Button Grid.Row="4" Grid.Column="2" Content="0" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="0"/>
            <Button Grid.Row="4" Grid.Column="3" Content="&lt;&lt;" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="&lt;&lt;"/>
            <Button Grid.Row="4" Grid.Column="4" Content="&gt;&gt;" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="&gt;&gt;" />

            <Button Grid.Row="5" Grid.Column="0" Content="B" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="B"/>
            <Button Grid.Row="5" Grid.Column="1" Content="E" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="E"/>
            <Button Grid.Row="5" Grid.Column="2" Content="AND" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="AND"/>
            <Button Grid.Row="5" Grid.Column="3" Content="OR" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="OR"/>
            <Button Grid.Row="5" Grid.Column="4" Content="NOT" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding UnaryOperatorCommand}" CommandParameter="NOT"/>



            <Button Grid.Row="6" Grid.Column="0" Content="C" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="C"/>
            <Button Grid.Row="6" Grid.Column="1" Content="F" Style="{DynamicResource ModernButtonStyle}" Command="{Binding NumberPressCommand}" CommandParameter="F"/>
            <Button Grid.Row="6" Grid.Column="2" Content="NAND" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="NAND"/>
            <Button Grid.Row="6" Grid.Column="3" Content="NOR" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="NOR"/>
            <Button Grid.Row="6" Grid.Column="4" Content="XOR" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="XOR"/>


            <Button Grid.Row="7" Grid.Column="2" Content="MOD" FontSize="14" Style="{DynamicResource ModernButtonStyle}" Command="{Binding OperatorPressCommand}" CommandParameter="%"/>

        </Grid>
    </Grid>
</UserControl>