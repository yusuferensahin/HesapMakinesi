<UserControl x:Class="HesapMakinesi.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:HesapMakinesi.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:GraphViewModel}"
             d:DesignHeight="650" d:DesignWidth="900">

    <Grid Background="{DynamicResource WindowBackgroundBrush}" Margin="10">

        <Grid.Resources>
            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" x:Name="GraphArea"
                Background="White" 
                CornerRadius="8" BorderBrush="#CCC" BorderThickness="1" ClipToBounds="True" Margin="0,0,0,10"
                MouseDown="GraphArea_MouseDown"
                MouseMove="GraphArea_MouseMove"
                MouseUp="GraphArea_MouseUp"
                MouseLeave="GraphArea_MouseLeave"
                Cursor="SizeAll">

            <Grid>
                <Viewbox Stretch="Fill" IsHitTestVisible="False">
                    <Grid Width="1000" Height="1000">

                        <ItemsControl ItemsSource="{Binding GridLines}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Line X1="{Binding X1}" Y1="{Binding Y1}" 
                                          X2="{Binding X2}" Y2="{Binding Y2}" 
                                          Stroke="{Binding Stroke}" 
                                          StrokeThickness="{Binding Thickness}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding DrawnFunctions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Polyline Points="{Binding Points}" 
                                              Stroke="{Binding Stroke}" 
                                              StrokeThickness="3"
                                              StrokeLineJoin="Round"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <ItemsControl ItemsSource="{Binding AxisLabels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}" 
                                               Canvas.Left="{Binding X}" 
                                               Canvas.Top="{Binding Y}"
                                               FontSize="14" 
                                               Foreground="#555"
                                               FontWeight="SemiBold"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Grid>
                </Viewbox>

                <TextBlock Text="Hareket ettirmek için sürükleyin" 
                           HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                           Margin="10" Opacity="0.4" FontSize="10" IsHitTestVisible="False"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" 
                CornerRadius="8" Padding="15"
                BorderBrush="#CCC" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Fonksiyon Ekle" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="f(x) =" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>

                        <TextBox Grid.Column="1" Text="{Binding FunctionInput, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="16" Padding="8" VerticalContentAlignment="Center"
                                 Background="#FAFAFA" BorderBrush="#DDD" BorderThickness="1">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding DrawCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="2" Content="+ Ekle" Command="{Binding DrawCommand}" 
                                Style="{DynamicResource ModernButtonStyle}" Height="38" Width="80" Margin="10,0,0,0" 
                                Background="{DynamicResource AccentBrush}" Foreground="White"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="45,5,0,0">
                        <TextBlock Text="Desteklenenler : x^y (Üs) +, -, *, / gibi basit işlemler" FontWeight="Bold" FontSize="11" Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>

                </StackPanel>

                <Border Grid.Column="1" BorderBrush="#EEE" BorderThickness="1,0,0,0" Padding="15,0,0,0">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                            <TextBlock Text="Grafikler" FontWeight="Bold" VerticalAlignment="Center"/>
                            <Button Content="Temizle" Command="{Binding ClearGraphCommand}" 
                                    Style="{DynamicResource ModernButtonStyle}" FontSize="10" Height="25" HorizontalAlignment="Right"
                                    Background="#D9534F" Foreground="White"/>
                        </Grid>

                        <ListBox ItemsSource="{Binding DrawnFunctions}" BorderThickness="0" Background="Transparent" MaxHeight="100" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9" CornerRadius="4" Padding="5" Margin="0,2" BorderBrush="#EEE" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Rectangle Width="10" Height="10" Fill="{Binding Stroke}" RadiusX="2" RadiusY="2" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Expression}" VerticalAlignment="Center" FontSize="12"/>
                                            <Button Grid.Column="2" Content="✕" 
                                                    Command="{Binding DataContext.RemoveFunctionCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                                    CommandParameter="{Binding}"
                                                    Width="20" Height="20" FontSize="10" 
                                                    Background="Transparent" Foreground="#999" BorderThickness="0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>