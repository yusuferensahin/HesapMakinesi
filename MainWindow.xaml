<Window x:Class="HesapMakinesi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:HesapMakinesi.ViewModels"
        xmlns:views="clr-namespace:HesapMakinesi.Views"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="Hesap Makinesi" 
        Icon="Assets/Calculator.ico"
        Height="800" MinHeight="800"
        Width="450" MinWidth="450"
        Background="{DynamicResource WindowBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CalculatorViewModel}">
            <views:CalculatorView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GraphViewModel}">
            <views:GraphView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ProgrammerViewModel}">
            <views:ProgrammerView/>
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnHistory" Grid.Column="0" Content="Geçmiş" 
                        Click="HistoryButton_Click"
                        Style="{DynamicResource ModernButtonStyle}" FontSize="11" Height="35" Width="60" Margin="0,0,5,0"/>

                <UniformGrid Grid.Column="1" Rows="1">
                    <Button Content="Basit" Command="{Binding SwitchToSimpleFromMainCommand}" 
                            Visibility="{Binding SimpleButtonVisibility}" 
                            Style="{DynamicResource ModernButtonStyle}" FontSize="11" Height="35"/>

                    <Button Content="Bilimsel" Command="{Binding SwitchToScientificFromMainCommand}" 
                            Visibility="{Binding ScientificButtonVisibility}" 
                            Style="{DynamicResource ModernButtonStyle}" FontSize="11" Height="35"/>

                    <Button Content="Bilgisayar" Command="{Binding ShowProgrammerCommand}" 
                            Visibility="{Binding ProgrammerButtonVisibility}" 
                            Style="{DynamicResource ModernButtonStyle}" FontSize="11" Height="35" ToolTip="Bilgisayar Modu"/>

                    <Button Content="Grafik" Command="{Binding ShowGraphCommand}" 
                            Visibility="{Binding GraphButtonVisibility}" 
                            Style="{DynamicResource ModernButtonStyle}" FontSize="11" Height="35"/>
                </UniformGrid>

                <Button Grid.Column="2" Content="🎨" Command="{Binding ToggleNextThemeCommand}" 
                        Style="{DynamicResource ModernButtonStyle}" FontSize="14" Width="35" Height="35" Margin="5,0,0,0"/>
            </Grid>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Focusable="False"/>

            <Grid Grid.Row="0" Grid.RowSpan="2" 
                  Visibility="{Binding IsHistoryPanelOpen, Converter={StaticResource BoolToVis}}"
                  Background="{DynamicResource WindowBackgroundBrush}"
                  Margin="0,50,0,0" 
                  x:Name="OverlayHistoryPanel">
                <views:HistoryView DataContext="{Binding CalculatorVM}"/>
            </Grid>
        </Grid>

        <Border x:Name="SidebarHistoryPanel" Grid.Column="1" 
                Width="300" 
                Margin="15,0,0,0" 
                BorderBrush="#888" BorderThickness="1,0,0,0"
                Visibility="Collapsed">
            <views:HistoryView DataContext="{Binding CalculatorVM}"/>
        </Border>

    </Grid>
</Window>