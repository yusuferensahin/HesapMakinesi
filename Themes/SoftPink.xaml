<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#FFF0F5</Color>
    <Color x:Key="PanelBackgroundColor">#FFE4E1</Color>
    <Color x:Key="PrimaryTextColor">#5C2C35</Color>
    <Color x:Key="SecondaryTextColor">#A86E7D</Color>

    <Color x:Key="ButtonNormalColor">#FFC1CC</Color>
    <Color x:Key="ButtonHoverColor">#FFB6C1</Color>
    <Color x:Key="ButtonPressedColor">#FF69B4</Color>
    <Color x:Key="AccentColor">#E05297</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="ButtonNormalBrush" Color="{StaticResource ButtonNormalColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
</ResourceDictionary>